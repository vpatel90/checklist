<!DOCTYPE html>
<html>
<head>
  <title>Checklist</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top">
  <ul class="nav nav-pills nav-justified">
    <li class="btn btn-default"><%= link_to 'Home', root_path %></li>
    <% unless signed_in? %>
      <li class="btn btn-default"><%= link_to 'Login', sign_in_path %></li>
      <li class="btn btn-default"><%= link_to 'Sign Up', new_user_path %></li>
    <% end %>
    <% if signed_in? %>
      <li class="btn btn-default"><%= link_to 'Logout', sign_out_path, method:"DELETE" %></li>
      <li class="btn btn-default"><%= link_to 'New List', new_list_path %></li>
    <% end %>
  </ul>
</nav>
<div class='container'>
<%= yield %>
</div>

</body>
</html>
